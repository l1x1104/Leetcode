#1 Recursive Solution
class Solution {
    public int longestConsecutive(TreeNode root) {
        if(root == null) return 0;
        int[] count = new int[1];
        dfs(root, count, root.val, 0);
        return count[0];
    }
    public void dfs(TreeNode root, int[] count, int target, int sum) {
        if(root == null) return ;
        if(root.val == target) sum ++;
        else sum = 1;
        count[0] = Math.max(count[0], sum);
        dfs(root.left, count, root.val + 1, sum);
        dfs(root.right, count, root.val + 1, sum);
    }
}

