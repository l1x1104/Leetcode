  public List<List<Integer>> levelOrder(TreeNode root) {
        List<List<Integer>> res = new ArrayList<>();
        if(root == null) {
            return res;
        }
        
        List<TreeNode> q = new LinkedList<>();
        q.offer(root);
        while(!q.isEmpty()) {
            List<Integer> tmpList = new ArrayList<>();
            int size = q.size();
            for(int i = 0; i < size; i ++) {
                TreeNode tmp = q.poll();
                tmpList.add(tmp.val);
                if(tmp.left != null) {
                    q.offer(tmp.left);
                }
                if(tmp.right != null) {
                    q.offer(tmp.right);
                }
            }
            res.add(tmpList);
        }
        
        return res;
    }
